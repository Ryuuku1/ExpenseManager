<Window x:Class="ExpenseManager.Desktop.Views.Dialogs.CategoryEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ExpenseManager.Desktop.ViewModels.Dialogs"
    xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
    mc:Ignorable="d"
    Title="{Binding Title}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    Background="{DynamicResource CardBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
        FontFamily="Segoe UI"
        MinWidth="360"
        MinHeight="220">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,0,12" />
            <Setter Property="Padding" Value="8" />
            <Setter Property="Background" Value="#111821" />
            <Setter Property="BorderBrush" Value="#222C37" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="CaretBrush" Value="{DynamicResource AccentBrush}" />
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" />
            <TextBlock Text="{extensions:TranslateExtension CATEGORY_DIALOG_INSTRUCTIONS}" Style="{StaticResource MutedText}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,16,0,0">
            <TextBlock Text="{extensions:TranslateExtension LABEL_NAME}" FontWeight="SemiBold" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{extensions:TranslateExtension LABEL_DESCRIPTION}" FontWeight="SemiBold" />
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="80" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="{extensions:TranslateExtension ACTION_CANCEL}" Width="100" Margin="0,0,8,0" Click="OnCancelClicked" />
            <Button Content="{extensions:TranslateExtension ACTION_SAVE}" Width="120" IsDefault="True" Click="OnSaveClicked" />
        </StackPanel>
    </Grid>
</Window>

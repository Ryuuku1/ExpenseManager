<Window x:Class="ExpenseManager.Desktop.Views.Dialogs.RecurringExpenseTemplateDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ExpenseManager.Desktop.ViewModels.Dialogs"
    xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
    mc:Ignorable="d"
    Title="{extensions:TranslateExtension RECURRING_TEMPLATE_DIALOG_TITLE}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    Background="{DynamicResource CardBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
        FontFamily="Segoe UI"
        MinWidth="420"
        MinHeight="440">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{extensions:TranslateExtension RECURRING_TEMPLATE_DIALOG_HEADER}" FontSize="20" FontWeight="SemiBold" />
            <TextBlock Text="{extensions:TranslateExtension RECURRING_TEMPLATE_DIALOG_SUBTITLE}" Style="{StaticResource MutedText}" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{extensions:TranslateExtension LABEL_CATEGORY}" FontWeight="SemiBold" />
                <ComboBox ItemsSource="{Binding Categories}"
                          DisplayMemberPath="DisplayName"
                          SelectedItem="{Binding SelectedCategory}"
                          Margin="0,4,0,12" />

                <TextBlock Text="{extensions:TranslateExtension LABEL_NAME}" FontWeight="SemiBold" />
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12" />

                <TextBlock Text="{extensions:TranslateExtension LABEL_NOTES}" FontWeight="SemiBold" />
                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12" Height="60" AcceptsReturn="True" TextWrapping="Wrap" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_AMOUNT}" FontWeight="SemiBold" />
                        <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_CURRENCY}" FontWeight="SemiBold" />
                        <ComboBox ItemsSource="{Binding CurrencyValues}" SelectedItem="{Binding SelectedCurrency}" />
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_RECURRENCE}" FontWeight="SemiBold" />
                        <ComboBox ItemsSource="{Binding RecurrenceValues}" SelectedItem="{Binding SelectedRecurrence}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_PAYMENT_METHOD}" FontWeight="SemiBold" />
                        <ComboBox ItemsSource="{Binding PaymentMethods}"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="Value"
                                  SelectedValue="{Binding SelectedPaymentMethod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_START_DATE}" FontWeight="SemiBold" />
                        <DatePicker SelectedDate="{Binding StartDate}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_END_DATE}" FontWeight="SemiBold" />
                        <CheckBox Content="{extensions:TranslateExtension RECURRING_TEMPLATE_DIALOG_SET_END_DATE}" IsChecked="{Binding HasEndDate}" Margin="0,4,0,4" />
                        <DatePicker SelectedDate="{Binding EndDate}" Visibility="{Binding HasEndDate, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{extensions:TranslateExtension ACTION_CANCEL}" Width="120" Style="{StaticResource SidebarLinkButton}" Margin="0,0,8,0" Click="OnCancelClicked" />
            <Button Content="{extensions:TranslateExtension ACTION_SAVE}" Width="140" Style="{StaticResource AccentButton}" Click="OnSaveClicked" />
        </StackPanel>
    </Grid>
</Window>

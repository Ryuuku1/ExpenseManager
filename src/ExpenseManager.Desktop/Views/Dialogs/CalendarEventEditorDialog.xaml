<Window x:Class="ExpenseManager.Desktop.Views.Dialogs.CalendarEventEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:ExpenseManager.Desktop.ViewModels.Dialogs"
    xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
    mc:Ignorable="d"
    Title="{extensions:TranslateExtension CALENDAR_EVENT_DIALOG_TITLE}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    Background="{DynamicResource CardBrush}"
    Foreground="{DynamicResource PrimaryTextBrush}"
        FontFamily="Segoe UI"
        MinWidth="420"
        MinHeight="460">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="{extensions:TranslateExtension CALENDAR_EVENT_DIALOG_HEADER}" FontSize="20" FontWeight="SemiBold" />
            <TextBlock Text="{extensions:TranslateExtension CALENDAR_EVENT_DIALOG_SUBTITLE}" Style="{StaticResource MutedText}" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{extensions:TranslateExtension LABEL_TITLE}" FontWeight="SemiBold" />
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12" />

                <TextBlock Text="{extensions:TranslateExtension LABEL_NOTES}" FontWeight="SemiBold" />
                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,12" Height="60" AcceptsReturn="True" TextWrapping="Wrap" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_DATE}" FontWeight="SemiBold" />
                        <DatePicker SelectedDate="{Binding EventDate}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{extensions:TranslateExtension LABEL_TIME_WITH_FORMAT}" FontWeight="SemiBold" />
                        <TextBox Text="{Binding EventTime, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>

                <TextBlock Text="{extensions:TranslateExtension LABEL_RECURRENCE}" FontWeight="SemiBold" />
                <ComboBox ItemsSource="{Binding RecurrenceTypes}" SelectedItem="{Binding SelectedRecurrence}" Margin="0,4,0,12" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <CheckBox Content="{extensions:TranslateExtension CALENDAR_EVENT_SET_REMINDER}" IsChecked="{Binding UseReminder}" />
                    <TextBox Text="{Binding ReminderMinutes, UpdateSourceTrigger=PropertyChanged}" Width="60" Margin="12,0,0,0" IsEnabled="{Binding UseReminder}" />
                    <TextBlock Text="{extensions:TranslateExtension CALENDAR_EVENT_REMINDER_MINUTES_SUFFIX}" VerticalAlignment="Center" Margin="4,0,0,0" Foreground="{DynamicResource MutedTextBrush}" />
                </StackPanel>

                <Separator Margin="0,8" />

                <CheckBox Content="{extensions:TranslateExtension CALENDAR_EVENT_CREATE_ALERT}" IsChecked="{Binding CreateAlert}" />

                <StackPanel Margin="0,12,0,0" Visibility="{Binding CreateAlert, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_TITLE}" FontWeight="SemiBold" />
                            <TextBox Text="{Binding AlertTitle, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_TYPE}" FontWeight="SemiBold" />
                            <ComboBox ItemsSource="{Binding AlertTypes}" SelectedItem="{Binding SelectedAlertType}" />
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_DATE}" FontWeight="SemiBold" />
                            <DatePicker SelectedDate="{Binding AlertDate}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_TIME}" FontWeight="SemiBold" />
                            <TextBox Text="{Binding AlertTime, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="{extensions:TranslateExtension ACTION_CANCEL}" Width="120" Style="{StaticResource SidebarLinkButton}" Margin="0,0,8,0" Click="OnCancelClicked" />
            <Button Content="{extensions:TranslateExtension ACTION_SAVE}" Width="140" Style="{StaticResource AccentButton}" Click="OnSaveClicked" />
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="ExpenseManager.Desktop.Views.Pages.DashboardPage"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ExpenseManager.Desktop.ViewModels"
             xmlns:local="clr-namespace:ExpenseManager.Desktop"
             xmlns:converters="clr-namespace:ExpenseManager.Desktop.Converters"
             xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
             Background="Transparent"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:DashboardViewModel}">
    <UserControl.Resources>
        <ItemsPanelTemplate x:Key="SummaryItemsPanel">
            <UniformGrid Columns="4" />
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="VerticalItemsPanel">
            <StackPanel />
        </ItemsPanelTemplate>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
        <Style x:Key="DashboardQuickActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Padding" Value="22,14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="MinHeight" Value="56" />
            <Setter Property="MinWidth" Value="220" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.85" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32" VerticalAlignment="Top">
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{extensions:TranslateExtension DASHBOARD_CLOCK_TITLE}" Style="{StaticResource SubheadingText}" Margin="0,0,0,8" />
                        <TextBlock Text="{Binding CurrentTimeDisplay}" FontSize="36" FontWeight="Bold" />
                        <TextBlock Text="{Binding CurrentDateDisplay}" Style="{StaticResource MutedText}" />
                    </StackPanel>
                </Border>

                <ItemsControl ItemsSource="{Binding SummaryCards}"
                              ItemsPanel="{StaticResource SummaryItemsPanel}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewModels:SummaryCardItemViewModel}">
                            <Border Style="{StaticResource Card}" Margin="0,0,16,16">
                                <StackPanel>
                                    <TextBlock Text="{Binding Glyph}" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="{DynamicResource AccentBrush}" />
                                    <TextBlock Text="{Binding Title}" FontSize="14" Foreground="{DynamicResource MutedTextBrush}" Margin="0,8,0,0" />
                                    <TextBlock Text="{Binding Value}" FontSize="24" FontWeight="Bold" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,16,0">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="{extensions:TranslateExtension SECTION_RECENT_EXPENSES}" Style="{StaticResource SubheadingText}" DockPanel.Dock="Left" />
                        </DockPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="320">
                            <ItemsControl ItemsSource="{Binding RecentExpenses}"
                                          ItemsPanel="{StaticResource VerticalItemsPanel}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type viewModels:RecentExpenseItemViewModel}">
                                        <Border Background="#111821" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                                                    <TextBlock Text="{Binding CategoryName}" Foreground="{DynamicResource SecondaryTextBrush}" />
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding Date}" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="2" Text="{Binding Amount}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="{extensions:TranslateExtension SECTION_SPENDING_TREND}" Style="{StaticResource SubheadingText}" Margin="0,0,0,16" />
                        <ItemsControl ItemsSource="{Binding SpendingTrend}"
                                      ItemsPanel="{StaticResource VerticalItemsPanel}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:TrendPointViewModel}">
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="{Binding Label}" Style="{StaticResource MutedText}" />
                                        <ProgressBar Value="{Binding RawAmount, Mode=OneWay}"
                                                     Maximum="{Binding DataContext.TrendMaximum, ElementName=Root}"
                                                     Height="6"
                                                     Foreground="{DynamicResource AccentBrush}"
                                                     Background="#221520" />
                                        <TextBlock Text="{Binding FormattedAmount}" FontWeight="SemiBold" Margin="0,4,0,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,16,0">
                    <StackPanel>
                        <TextBlock Text="{extensions:TranslateExtension SECTION_QUICK_ACTIONS}" Style="{StaticResource SubheadingText}" Margin="0,0,0,16" />
                        <ItemsControl ItemsSource="{Binding QuickActions}"
                                      ItemsPanel="{StaticResource VerticalItemsPanel}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:QuickActionItemViewModel}">
                    <Button Style="{StaticResource DashboardQuickActionButton}"
                        Command="{Binding ViewModel.ExecuteQuickActionCommand, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}"
                                            CommandParameter="{Binding CommandKey}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Glyph}" FontFamily="Segoe MDL2 Assets" FontSize="20" Margin="0,0,10,0" />
                                            <TextBlock Text="{Binding Label}" FontSize="17" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="{extensions:TranslateExtension SECTION_ALERTS}" Style="{StaticResource SubheadingText}" Margin="0,0,0,16" />
                        <ItemsControl ItemsSource="{Binding Alerts}"
                                      ItemsPanel="{StaticResource VerticalItemsPanel}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:AlertItemViewModel}">
                                    <Border Background="#111821" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <TextBlock Text="{Binding OccursAtLocal, StringFormat='{}{0:dd MMM yyyy HH:mm}'}" Foreground="{DynamicResource MutedTextBrush}" />
                                                <TextBlock Text="·" Margin="8,0" Foreground="{DynamicResource MutedTextBrush}" />
                                                <TextBlock Text="{Binding AlertTypeDisplay}" Foreground="{DynamicResource MutedTextBrush}" />
                                                <TextBlock Text="·" Margin="8,0" Foreground="{DynamicResource MutedTextBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRecurring}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_RECURRING}" Foreground="{DynamicResource AccentBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsRecurring}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="·" Margin="8,0" Foreground="{DynamicResource MutedTextBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDismissed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_ACKNOWLEDGED}" Foreground="{StaticResource SuccessBrush}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDismissed}" Value="True">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                        <Button Content="{extensions:TranslateExtension ACTION_EDIT}"
                            Style="{StaticResource SidebarLinkButton}"
                            MinWidth="80"
                            Margin="0,0,8,0"
                            Command="{Binding DataContext.EditAlertCommand, ElementName=Root}"
                                                        CommandParameter="{Binding}" />
                                                <Button Content="{extensions:TranslateExtension ACTION_REMOVE}"
                                                        Style="{StaticResource SidebarLinkButton}"
                                                        MinWidth="80"
                            Command="{Binding DataContext.DeleteAlertCommand, ElementName=Root}"
                                                        CommandParameter="{Binding}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
            </StackPanel>
        </ScrollViewer>

        <Border Background="#AA0B1016"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource CardBrush}" Padding="24" CornerRadius="12">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True" Height="6" Margin="0,0,0,12" />
                    <TextBlock Text="{extensions:TranslateExtension STATUS_LOADING_DASHBOARD}" Style="{StaticResource MutedText}" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Border>

        <Border Background="#AA0B1016"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource CardBrush}" Padding="24" CornerRadius="12">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension ERROR_DATA_LOAD}" Style="{StaticResource HeadingText}" />
                    <TextBlock Text="{Binding ErrorMessage}" Style="{StaticResource MutedText}" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>

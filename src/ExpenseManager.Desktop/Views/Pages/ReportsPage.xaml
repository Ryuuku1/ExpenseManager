<UserControl x:Class="ExpenseManager.Desktop.Views.Pages.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:itemViewModels="clr-namespace:ExpenseManager.Desktop.ViewModels.Items"
             Background="Transparent"
             Loaded="OnLoaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,16">
            <TextBlock Text="{extensions:TranslateExtension NAVIGATION_REPORTS}" Style="{StaticResource HeadingText}" DockPanel.Dock="Left" />
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <ComboBox Width="200"
                          Margin="0,0,12,0"
                          ItemsSource="{Binding PeriodOptions}"
                          SelectedItem="{Binding SelectedPeriod}"
                          DisplayMemberPath="DisplayName"
                          HorizontalAlignment="Right" />
        <Button Content="{extensions:TranslateExtension ACTION_EXPORT_PDF}"
            Style="{StaticResource AccentButton}"
            Width="160"
            Margin="0,0,12,0"
            Command="{Binding ExportPdfCommand}" />
        <Button Content="{extensions:TranslateExtension ACTION_EXPORT_CSV}"
            Style="{StaticResource AccentButton}"
            Width="160"
            Margin="0,0,12,0"
            Command="{Binding ExportCsvCommand}" />
        <Button Content="{extensions:TranslateExtension ACTION_REFRESH}"
            Style="{StaticResource AccentButton}"
            Width="140"
            Command="{Binding RefreshCommand}" />
            </StackPanel>
        </DockPanel>

        <UniformGrid Grid.Row="1" Columns="3" Rows="2" Margin="0,0,0,16" HorizontalAlignment="Stretch" VerticalAlignment="Top" IsItemsHost="False">
            <Border Style="{StaticResource Card}" Margin="0,0,16,16">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension REPORTS_METRIC_TOTAL_EXPENSES}" Style="{StaticResource MutedText}" />
                    <TextBlock Text="{Binding TotalExpenses}" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="0,0,16,16">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension REPORTS_METRIC_AVERAGE_EXPENSE}" Style="{StaticResource MutedText}" />
                    <TextBlock Text="{Binding AverageExpense}" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension REPORTS_METRIC_LARGEST_EXPENSE}" Style="{StaticResource MutedText}" />
                    <TextBlock Text="{Binding LargestExpense}" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension LABEL_MONTHLY_BUDGET}" Style="{StaticResource MutedText}" />
                    <TextBlock Text="{Binding Budget}" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}" Margin="0,0,16,0">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension REPORTS_METRIC_REMAINING}" Style="{StaticResource MutedText}" />
                    <TextBlock Text="{Binding BudgetRemaining}" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="{extensions:TranslateExtension REPORTS_METRIC_EXPENSE_COUNT}" Style="{StaticResource MutedText}" />
                    <TextBlock Text="{Binding ExpenseCount, Mode=OneWay}" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

        <Border Style="{StaticResource Card}"
            Background="{DynamicResource ChartCardBrush}"
            BorderBrush="{DynamicResource ChartCardBorderBrush}"
                    Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="{extensions:TranslateExtension REPORTS_SECTION_CATEGORY_DISTRIBUTION}" Style="{StaticResource SubheadingText}" />

                    <Grid Grid.Row="1" MinHeight="320">
                        <oxy:PlotView Model="{Binding CategoryPlot}"
                                     IsHitTestVisible="False"
                                     Background="{DynamicResource ChartBackgroundBrush}">
                            <oxy:PlotView.Style>
                                <Style TargetType="oxy:PlotView">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasCategoryData}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </oxy:PlotView.Style>
                        </oxy:PlotView>
                        <TextBlock Text="{extensions:TranslateExtension STATUS_NO_DATA}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MutedText}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasCategoryData}" Value="False">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <ScrollViewer Grid.Row="2"
                                  Margin="0,16,0,0"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="220">
                        <ListView ItemsSource="{Binding CategoryBreakdown}">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type itemViewModels:ReportCategoryBreakdownViewModel}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Border Width="12"
                                            Height="12"
                                            CornerRadius="6"
                                            Background="{Binding AccentBrush}"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0" />
                                    <TextBlock Grid.Column="1" Text="{Binding CategoryName}" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Style="{StaticResource MutedText}">
                                        <Run Text="{Binding ExpenseCount, Mode=OneWay}" />
                                        <Run Text=" " />
                                            <Run Text="{extensions:TranslateExtension LABEL_EXPENSES_LOWER}" />
                                    </TextBlock>
                                    <TextBlock Grid.Column="3" HorizontalAlignment="Right">
                                        <Run Text="{Binding TotalAmount, Mode=OneWay, StringFormat='{}{0:N2}'}" />
                                        <Run Text=" " />
                                        <Run Text="{Binding Currency, Mode=OneWay}" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>

        <Border Grid.Column="1"
            Style="{StaticResource Card}"
            Background="{DynamicResource ChartCardBrush}"
            BorderBrush="{DynamicResource ChartCardBorderBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="{extensions:TranslateExtension REPORTS_SECTION_MONTHLY_TREND}" Style="{StaticResource SubheadingText}" />

                    <Grid Grid.Row="1" MinHeight="300">
                        <oxy:PlotView Model="{Binding TrendPlot}"
                                     IsHitTestVisible="False"
                                     Background="{DynamicResource ChartBackgroundBrush}">
                            <oxy:PlotView.Style>
                                <Style TargetType="oxy:PlotView">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasTrendData}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </oxy:PlotView.Style>
                        </oxy:PlotView>
                        <TextBlock Text="{extensions:TranslateExtension STATUS_NO_DATA}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource MutedText}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasTrendData}" Value="False">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

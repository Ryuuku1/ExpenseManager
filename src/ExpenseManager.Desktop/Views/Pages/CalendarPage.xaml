<UserControl x:Class="ExpenseManager.Desktop.Views.Pages.CalendarPage"
             x:Name="Root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ExpenseManager.Desktop.ViewModels"
             xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
             Background="Transparent"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewModels:CalendarViewModel}">
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

    <WrapPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                <TextBlock Text="{extensions:TranslateExtension CALENDAR_FOCUS_DATE}" Foreground="{DynamicResource MutedTextBrush}" FontSize="12" FontWeight="SemiBold" />
                <DatePicker SelectedDate="{Binding FocusDate, Mode=TwoWay}" Width="160" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                <TextBlock Text="{extensions:TranslateExtension CALENDAR_RANGE}" Foreground="{DynamicResource MutedTextBrush}" FontSize="12" FontWeight="SemiBold" />
                <ComboBox ItemsSource="{Binding RangeOptions}"
                          SelectedItem="{Binding SelectedRange, Mode=TwoWay}"
                          DisplayMemberPath="DisplayText"
                          Width="160" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                <TextBlock Text="{extensions:TranslateExtension CALENDAR_SEARCH}" Foreground="{DynamicResource MutedTextBrush}" FontSize="12" FontWeight="SemiBold" />
                <TextBox Width="220"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <CheckBox Content="{extensions:TranslateExtension CALENDAR_INCLUDE_ACKNOWLEDGED}" Margin="0,20,16,0"
                      IsChecked="{Binding IncludeAcknowledgedAlerts, Mode=TwoWay}" />

            <WrapPanel Margin="0,16,0,0">
                <Button Content="{extensions:TranslateExtension DIALOG_NEW_EVENT_ALERT}"
                        Style="{StaticResource AccentButton}"
                        Width="200"
                        Margin="0,0,8,8"
                        Command="{Binding AddEventCommand}" />
                <Button Content="{extensions:TranslateExtension ACTION_REFRESH}"
                        Style="{StaticResource SidebarLinkButton}"
                        Width="160"
                        Margin="0,0,8,8"
                        Command="{Binding RefreshCommand}" />
            </WrapPanel>
        </WrapPanel>

        <Grid Grid.Row="1" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="{extensions:TranslateExtension SECTION_UPCOMING_EVENTS}" Style="{StaticResource SubheadingText}" Margin="0,0,0,16" />
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Events}"
                              BorderThickness="0"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              Margin="0">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:Items.CalendarEventViewModel}">
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        BorderBrush="{DynamicResource SurfaceAltBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                                            <TextBlock Text="{Binding Notes}" Foreground="{DynamicResource MutedTextBrush}" TextWrapping="Wrap" />
                                            <WrapPanel Margin="0,8,0,0">
                                                <TextBlock Text="{Binding ScheduledAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Margin="0,0,12,0" Foreground="{DynamicResource PrimaryTextBrush}" />
                                                <TextBlock Text="{Binding ReminderDisplay}" Margin="0,0,12,0" Foreground="{DynamicResource PrimaryTextBrush}" />
                                                <TextBlock Text="{Binding AlertDisplay}" Margin="0,0,12,0" Foreground="{DynamicResource PrimaryTextBrush}" />
                                                <TextBlock Text="{Binding RecurrenceDisplay}" Foreground="{DynamicResource PrimaryTextBrush}" />
                                            </WrapPanel>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                            <Button Content="{extensions:TranslateExtension ACTION_REMOVE}"
                                                    Style="{StaticResource SidebarLinkButton}"
                                                    MinWidth="80"
                                                    Command="{Binding DataContext.DeleteEventCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="{extensions:TranslateExtension SECTION_ALERTS}" Style="{StaticResource SubheadingText}" Margin="0,0,0,16" />
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Alerts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:AlertItemViewModel}">
                                <Border Background="{DynamicResource SurfaceAltBrush}"
                                        BorderBrush="{DynamicResource SurfaceAltBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12"
                                        Margin="0,0,0,8"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}" />
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding OccursAtLocal, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Foreground="{DynamicResource MutedTextBrush}" />
                                            <TextBlock Text="·" Margin="8,0" Foreground="{DynamicResource MutedTextBrush}" />
                                            <TextBlock Text="{Binding AlertTypeDisplay}" Foreground="{DynamicResource MutedTextBrush}" />
                                            <TextBlock Text="·" Margin="8,0" Foreground="{DynamicResource MutedTextBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRecurring}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_RECURRING}" Foreground="{DynamicResource AccentBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRecurring}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="·" Margin="8,0" Foreground="{DynamicResource MutedTextBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDismissed}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{extensions:TranslateExtension CALENDAR_ALERT_ACKNOWLEDGED}" Foreground="{StaticResource SuccessBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDismissed}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                    <WrapPanel Margin="0,12,0,0" HorizontalAlignment="Right">
                                            <Button Content="{extensions:TranslateExtension ACTION_EDIT}"
                                                    Style="{StaticResource SidebarLinkButton}"
                                                    MinWidth="80"
                                                    Margin="0,0,8,8"
                                                    Command="{Binding DataContext.EditAlertCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}" />
                                            <Button Content="{extensions:TranslateExtension CALENDAR_DISMISS_ALERT}"
                                                    Style="{StaticResource SidebarLinkButton}"
                                                    MinWidth="120"
                                                    Margin="0,0,8,8"
                                                    Command="{Binding DataContext.DismissAlertCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}" />
                                            <Button Content="{extensions:TranslateExtension ACTION_REMOVE}"
                                                    Style="{StaticResource SidebarLinkButton}"
                                                    MinWidth="80"
                                                    Margin="0,0,0,8"
                                                    Command="{Binding DataContext.DeleteAlertCommand, ElementName=Root}"
                                                    CommandParameter="{Binding}" />
                    </WrapPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="ExpenseManager.Desktop.Views.Pages.CategoriesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:extensions="clr-namespace:ExpenseManager.Desktop.Extensions"
             xmlns:viewModels="clr-namespace:ExpenseManager.Desktop.ViewModels"
             Background="Transparent">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="{extensions:TranslateExtension ACTION_ADD}" Style="{StaticResource AccentButton}" Width="140" Margin="0,0,8,0"
                    Command="{Binding AddCategoryCommand}" />
        <Button Content="{extensions:TranslateExtension ACTION_EDIT}" Width="120" Style="{StaticResource SidebarLinkButton}" Margin="0,0,8,0"
                    Command="{Binding EditCategoryCommand}" />
        <Button Content="{extensions:TranslateExtension ACTION_REMOVE}" Width="120" Style="{StaticResource SidebarLinkButton}" Margin="0,0,8,0"
                    Command="{Binding DeleteCategoryCommand}" />
        <Button Content="{extensions:TranslateExtension ACTION_REFRESH}" Width="120" Style="{StaticResource SidebarLinkButton}"
                    Command="{Binding RefreshCommand}" />
        </StackPanel>

        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,16,0,0">
            <DataGrid ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      GridLinesVisibility="None"
                      RowBackground="{DynamicResource TableRowBackgroundBrush}"
                      AlternatingRowBackground="{DynamicResource TableRowAlternateBrush}"
                      FontSize="16">
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                        <Setter Property="Margin" Value="0,6" />
                        <Setter Property="Padding" Value="12,10" />
                        <Setter Property="MinHeight" Value="48" />
                    </Style>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}" />
                        <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="{DynamicResource SurfaceAltBorderBrush}" />
                        <Setter Property="Padding" Value="12,10" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{extensions:TranslateExtension LABEL_NAME}" Binding="{Binding DisplayName}" Width="2*" />
                    <DataGridTextColumn Header="{extensions:TranslateExtension LABEL_DESCRIPTION}" Binding="{Binding DisplayDescription}" Width="3*" />
                    <DataGridTextColumn Header="{extensions:TranslateExtension REPORTS_METRIC_EXPENSE_COUNT}" Binding="{Binding ExpenseCountText}" Width="2*" />
                    <DataGridTemplateColumn Header="{extensions:TranslateExtension CATEGORY_DEFAULT_BADGE}" Width="Auto" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type viewModels:Items.CategoryItemViewModel}">
                                <Border Padding="8,4"
                                        CornerRadius="8"
                                        Background="{DynamicResource AccentBrush}"
                                        Opacity="0.2"
                                        Visibility="{Binding IsDefault, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="{Binding DefaultBadgeText}" Foreground="{DynamicResource PrimaryTextBrush}" FontWeight="SemiBold" />
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
